<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recommendations</title>
  <style>
    .listing-card {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 10px;
      margin: 10px;
      width: 200px;
      display: inline-block;
    }
    .listing-image {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }
    .listing-info {
      padding: 10px 0;
    }
  </style>
</head>
<body>
  <h1>Your Recommended Listings</h1>
  <div class="listings">
    <% recommendations.forEach(function(listing) { %>
      <div class="listing-card">
        <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-image">
        <div class="listing-info">
          <h3><%= listing.title %></h3>
          <p><%= listing.description %></p>
          <p>Location: <%= listing.location %></p>
          <p>Price: $<%= listing.price %></p>
        </div>
      </div>
    <% }); %>
  </div>
</body>
